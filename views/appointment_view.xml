<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!--  CREATING TREE VIEW (also known as list view)  -->
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
            <field name="name">hospital.appointment.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0">             <!-- used to create a tree or list on the main page -->
                    <field name="patient_id">
                    <field name="appointment_time">
                    <field name="booking_date">
                </tree>
            </field>
    </record>
    
    <!--  CREATING FORM VIEW  -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
            <field name="name">hospital.appointment.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
            <form create="0" delete="0" edit="0">                <!-- instead of form we can use <tree>, also update it in names also -->
                <sheet>               <!-- to create borders around the form  -->
                    <div>
                        <h1>
                            <field name="priority" widget="priority"/>             <!--   Priority Widget   -->
                        </h1>
                    </div>
                    <group>               <!--  to give a label to the fields in the form  -->
                        <group>
                            <field name="patient_id">
                            <field name="ref">
                            <field name="gender/">
                            <field name="booking_date">
                        </group>              <!-- by adding these two groups, we split the form in 2 -->
                        <group>
                            <field name="appointment_time">
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription", placeholder="Enter your prescription">           <!--  This is a HTML Field  -->
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                        </page>
                    </notebook>
                                
                </sheet>
                <!----------- CHATTER ----------->          
                <div class='oe_chatter'>      
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
            </form>
            </field>
    </record>
    
    <!--  CREATING SEARCH VIEW (also known as control panel view)  -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
            <field name="name">hospital.appointment.search</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
            <search>                <!--  This is used to define the search section that we see on the main page of our menu  -->
            </search>
            </field>
    </record>
    
    <!--  CREATING WINDOW ACTION  -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_no_content_smiling_face">
                    Create your first appointment
                </p>
            </field>
        </record>

    <menuitem id="menu_appointment"
              name="Appointments"
              parent="menu_patient_master"
              action="action_hospital_appointment"
              sequence="0"/>        <!-- this menu item is not included in menu.xml beacause it causes an installation error -->
</odoo>
