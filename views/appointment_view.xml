<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!--  decoration-success -- green  -->
    <!--  decoration-info -- blue  -->
    <!--  decoration-danger -- red  -->
    <!--  decoration-warning -- yellow  -->
    <!--  decoration-mute -- gray  -->
    
    <!--  CREATING TREE VIEW (also known as list view)  -->
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
            <field name="name">hospital.appointment.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" decoration-success="state=='done'" decoration-info="state=='draft'"
                           decoration-danger="state=='cancel'" decoration-warning="state=='in_consultation'" 
                           sample="1" multi_edit='1'>             <!-- used to create a tree or list on the main page -->
                    <field name="patient_id"/>
                    <field name="ref" optional="hide"/>      <!--  this optional will add a option to select the fields we want in the view  -->
                    <field name="doctor_id" widget="many2one_avatar_user"/>
                    <field name="gender" optional="hide"/>    <!--  hide will hide the field by default  -->
                    <field name="appointment_time"/>
                    <field name="booking_date" optional='show'/>   <!--  show will show the field by default  -->
                    <field name="activity_ids" widget="list_activity"/>         <!-- widget list activity -->
                    <field name="state"
                           decoration-success="state=='done'"
                           decoration-info="state=='draft'"
                           decoration-danger="state=='cancel'"
                           decoration-warning="state=='in_consultation'"
                           widget="badge"/>
                </tree>
            </field>
    </record>
    
    <!--  CREATING FORM VIEW  -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
            <field name="name">hospital.appointment.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
            <form create="0" delete="0" edit="0">                <!-- instead of form we can use <tree>, also update it in names also -->
                <header>
                    <button name="action_in_consultation" string="In Consultation" class="oe_highlight"      
                            type="object" states="draft" data-hotkey='x'/>                <!-- controlling statusbar using buttons -->
                    <button name="action_done" string="Mark As Done" class="oe_highlight"
                            type="object" states="in_consultation" data-hotkey='v'/>      <!-- states="draft" means when we click on the In Consultation, our appointment will go to draft state -->
                    <button name="action_cancel" string="In Cancel" type="object" 
                            states="draft, in_consultation" data-hotkey='z'/>
                    <button name="action_draft" string="Reset To Draft" type="object" 
                            states="cancel" data-hotkey='r'/>
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable':'1'}" statusbar_visible="draft,in_consultation,done"/>       <!--  adds a stausbar in form, statusbar_visible tells which all states should be visible  -->   
                </header>    
                <sheet>               <!-- to create borders around the form  -->
                    <div>
                        <h1>
                            <field name="priority" widget="priority"/>             <!--   Priority Widget   -->
                        </h1>
                    </div>
                    <group>               <!--  to give a label to the fields in the form  -->
                        <group>
                            <field name="patient_id"/>
                            <field name="ref"/>
                            <field name="gender/">
                            <field name="doctor_id" widget="many2one_avatar"/>
                            <field name="booking_date" help="Date of booking" default_focus="1"/>
                        </group>              <!-- by adding these two groups, we split the form in 2 -->
                        <group>
                            <field name="hide_sales_price" groups="base.group_no_one"/>
                            <field name="appointment_time"/>
                            <button name="action_test" string="Object Button" type="object" 
                                    help="A message will be printed in the log"         
                                    confirm="Are you sure to execute python code ?"          
                                    groups="base.group_no_one"
                                    class="oe_highlight"/>           <!--  help will show a message when hover over the reference in the form  -->  <!--  shows confirmation message  -->
                            <button name="%(om_hospital.action_hospital_patient)d" string="Action Button" type="action" 
                                    help="On clicking this button, you will be redirected to patient records"    
                                    confirm="Are you sure you want to open patient action ?"
                                    groups="base.group_no_one"
                                    class="oe_highlight"/>    <!--  Adding Buttons  -->
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription", placeholder="Enter your prescription"
                                   option="{'collaborative':true, 'resizable': true}"/>           <!--  This is a HTML Field  -->
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="price_unit"
                                           attrs="{'column_invisible': [('parent.hide_sales_price', '=', True)]}"/>
                                    <field name="qty"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="price_unit"
                                               attrs="{'column_invisible': [('parent.hide_sales_price', '=', True)]}"/>
                                        <field name="qty"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                                
                </sheet>
                <!----------- CHATTER ----------->          
                <div class='oe_chatter'>      
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
            </form>
            </field>
    </record>
    
    <!--  CREATING SEARCH VIEW (also known as control panel view)  -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
            <field name="name">hospital.appointment.search</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
            <search>                <!--  This is used to define the search section that we see on the main page of our menu  -->
            </search>
            </field>
    </record>
    
    <!--  CREATING WINDOW ACTION  -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_no_content_smiling_face">
                    Create your first appointment
                </p>
            </field>
        </record>

    <menuitem id="menu_appointment"
              name="Appointments"
              parent="menu_patient_master"
              action="action_hospital_appointment"
              sequence="0"/>        <!-- this menu item is not included in menu.xml beacause it causes an installation error -->
</odoo>
